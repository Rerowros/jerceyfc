---
// src/components/Projects.astro
import { projects } from "../data/projects.ts";
import ProjectCard from "./ProjectCard.astro";

interface Props {
  limit?: number;
  showViewAll?: boolean;
  showFeaturedOnly?: boolean;
}

const { limit, showViewAll = false, showFeaturedOnly = false } = Astro.props;

// Фильтруем и ограничиваем проекты
let displayProjects = showFeaturedOnly
  ? projects.filter((p) => p.featured)
  : projects;
displayProjects = limit ? displayProjects.slice(0, limit) : displayProjects;
---

<section id="projects" class="py-20 px-4">
  <div class="max-w-7xl mx-auto">
    <!-- Заголовок секции -->
    <div class="text-center mb-16">
      <p class="section-title scroll-animate">
        <span class="lang-ru">Портфолио</span>
        <span class="lang-en">Portfolio</span>
      </p>
      <h2
        class="text-3xl md:text-5xl font-bold font-cinzel text-glow scroll-animate"
        style="transition-delay: 100ms;"
      >
        <span class="lang-ru">Избранные работы</span>
        <span class="lang-en">Featured Work</span>
      </h2>
      <p
        class="text-base md:text-lg text-[var(--color-muted-foreground)] mt-4 max-w-2xl mx-auto scroll-animate"
        style="transition-delay: 200ms;"
      >
        <span class="lang-ru"
          >Проекты, которыми я особенно горжусь — от веб-приложений до
          десктопных решений и ML-моделей.</span
        >
        <span class="lang-en"
          >Projects I'm particularly proud of — from web applications to desktop
          solutions and ML models.</span
        >
      </p>
    </div>

    <!-- Сетка проектов -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        displayProjects.map((p, index) => (
          <div
            class="scroll-animate h-full"
            style={`transition-delay: ${index * 100 + 300}ms`}
          >
            <ProjectCard project={p} />
          </div>
        ))
      }
    </div>

    <!-- Кнопка "Все проекты" -->
    {
      showViewAll && (
        <div
          class="text-center mt-14 scroll-animate"
          style="transition-delay: 600ms;"
        >
          <a
            href="/projects"
            class="btn-primary inline-flex items-center gap-2 group"
          >
            <span class="lang-ru">Все проекты</span>
            <span class="lang-en">View All Projects</span>
            <svg
              class="w-5 h-5 transition-transform group-hover:translate-x-1"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"
              />
            </svg>
          </a>
        </div>
      )
    }
  </div>
</section>
