---
// src/components/sections/Skills.astro
---

<section id="skills" class="py-12 md:py-20 px-4">
  <div class="max-w-7xl mx-auto">
    <!-- Заголовок секции -->
    <div class="text-center mb-10 md:mb-16">
      <p class="section-title scroll-animate">
        <span class="lang-ru">Технологии</span>
        <span class="lang-en">Technologies</span>
      </p>
      <h2
        class="text-3xl md:text-5xl font-bold font-cinzel text-glow scroll-animate"
        style="transition-delay: 100ms;"
      >
        <span class="lang-ru">Мой стек технологий</span>
        <span class="lang-en">My Tech Stack</span>
      </h2>
    </div>

    <!-- Сетка навыков -->
    <div class="flex flex-col items-center gap-4 md:gap-6">
      
      <!-- Первая строка -->
      <div class="w-full grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-6">
        {/* Helper function to avoid repetition, but keeping inline for repomix */}
        
        <!-- Frontend -->
        <div class="group relative overflow-hidden rounded-2xl bg-[var(--color-card)] border border-[var(--color-border)] p-6 md:p-8 transition-all duration-300 hover:border-[var(--color-primary)]/50">
          <div class="absolute inset-0 bg-gradient-to-br from-[var(--color-primary)]/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          <div class="relative z-10">
            <div class="mb-4 md:mb-6 inline-flex items-center justify-center rounded-lg bg-[var(--color-primary)]/10 p-3 text-[var(--color-primary)] shadow-[0_0_15px_rgba(var(--color-primary),0.2)]">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="mb-3 md:mb-4 text-xl md:text-2xl font-bold font-cinzel">
              <span class="lang-ru">Фронтенд</span>
              <span class="lang-en">Frontend</span>
            </h3>
            <div class="flex flex-wrap gap-2">
              {["Next.js", "TypeScript", "React", "Astro", "Tailwind CSS"].map((tech) => (
                <span class="rounded-md bg-[var(--color-foreground)]/5 px-2.5 py-1 text-sm font-medium text-[var(--color-muted-foreground)] transition-colors group-hover:bg-[var(--color-primary)]/10 group-hover:text-[var(--color-primary)]">
                  {tech}
                </span>
              ))}
            </div>
          </div>
        </div>

        <!-- Backend -->
        <div class="group relative overflow-hidden rounded-2xl bg-[var(--color-card)] border border-[var(--color-border)] p-6 md:p-8 transition-all duration-300 hover:border-[var(--color-primary)]/50 scroll-animate" style="transition-delay: 200ms;">
          <div class="absolute inset-0 bg-gradient-to-br from-[var(--color-primary)]/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          <div class="relative z-10">
            <div class="mb-4 md:mb-6 inline-flex items-center justify-center rounded-lg bg-[var(--color-primary)]/10 p-3 text-[var(--color-primary)] shadow-[0_0_15px_rgba(var(--color-primary),0.2)]">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path>
              </svg>
            </div>
            <h3 class="mb-3 md:mb-4 text-xl md:text-2xl font-bold font-cinzel">
              <span class="lang-ru">Бэкенд</span>
              <span class="lang-en">Backend</span>
            </h3>
            <div class="flex flex-wrap gap-2">
              {["Python", "Node.js", "C#", "PostgreSQL", "Redis"].map((tech) => (
                <span class="rounded-md bg-[var(--color-foreground)]/5 px-2.5 py-1 text-sm font-medium text-[var(--color-muted-foreground)] transition-colors group-hover:bg-[var(--color-primary)]/10 group-hover:text-[var(--color-primary)]">
                  {tech}
                </span>
              ))}
            </div>
          </div>
        </div>

        <!-- ML -->
        <div class="group relative overflow-hidden rounded-2xl bg-[var(--color-card)] border border-[var(--color-border)] p-6 md:p-8 transition-all duration-300 hover:border-[var(--color-primary)]/50 scroll-animate" style="transition-delay: 300ms;">
          <div class="absolute inset-0 bg-gradient-to-br from-[var(--color-primary)]/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          <div class="relative z-10">
            <div class="mb-4 md:mb-6 inline-flex items-center justify-center rounded-lg bg-[var(--color-primary)]/10 p-3 text-[var(--color-primary)] shadow-[0_0_15px_rgba(var(--color-primary),0.2)]">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
              </svg>
            </div>
            <h3 class="mb-3 md:mb-4 text-xl md:text-2xl font-bold font-cinzel">
              <span class="lang-ru">ML / AI</span>
              <span class="lang-en">ML / AI</span>
            </h3>
            <div class="flex flex-wrap gap-2">
              {["PyTorch", "TensorFlow", "NLP", "MCTS", "NumPy"].map((tech) => (
                <span class="rounded-md bg-[var(--color-foreground)]/5 px-2.5 py-1 text-sm font-medium text-[var(--color-muted-foreground)] transition-colors group-hover:bg-[var(--color-primary)]/10 group-hover:text-[var(--color-primary)]">
                  {tech}
                </span>
              ))}
            </div>
          </div>
        </div>
      </div>

      <!-- Вторая строка -->
      <div class="w-full lg:w-2/3 grid grid-cols-1 sm:grid-cols-2 gap-4 md:gap-6">
        <!-- Desktop -->
        <div class="group relative overflow-hidden rounded-2xl bg-[var(--color-card)] border border-[var(--color-border)] p-6 md:p-8 transition-all duration-300 hover:border-[var(--color-primary)]/50 scroll-animate" style="transition-delay: 400ms;">
          <div class="absolute inset-0 bg-gradient-to-br from-[var(--color-primary)]/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          <div class="relative z-10">
            <div class="mb-4 md:mb-6 inline-flex items-center justify-center rounded-lg bg-[var(--color-primary)]/10 p-3 text-[var(--color-primary)] shadow-[0_0_15px_rgba(var(--color-primary),0.2)]">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
              </svg>
            </div>
            <h3 class="mb-3 md:mb-4 text-xl md:text-2xl font-bold font-cinzel">
              <span class="lang-ru">Десктоп и боты</span>
              <span class="lang-en">Desktop & Bots</span>
            </h3>
            <div class="flex flex-wrap gap-2">
              {["WinUI 3", "C#", "Telegram API", "Telethon", "AsyncIO"].map((tech) => (
                <span class="rounded-md bg-[var(--color-foreground)]/5 px-2.5 py-1 text-sm font-medium text-[var(--color-muted-foreground)] transition-colors group-hover:bg-[var(--color-primary)]/10 group-hover:text-[var(--color-primary)]">
                  {tech}
                </span>
              ))}
            </div>
          </div>
        </div>

        <!-- DevOps -->
        <div class="group relative overflow-hidden rounded-2xl bg-[var(--color-card)] border border-[var(--color-border)] p-6 md:p-8 transition-all duration-300 hover:border-[var(--color-primary)]/50 scroll-animate" style="transition-delay: 500ms;">
          <div class="absolute inset-0 bg-gradient-to-br from-[var(--color-primary)]/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          <div class="relative z-10">
            <div class="mb-4 md:mb-6 inline-flex items-center justify-center rounded-lg bg-[var(--color-primary)]/10 p-3 text-[var(--color-primary)] shadow-[0_0_15px_rgba(var(--color-primary),0.2)]">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <h3 class="mb-3 md:mb-4 text-xl md:text-2xl font-bold font-cinzel">
              <span class="lang-ru">DevOps</span>
              <span class="lang-en">DevOps</span>
            </h3>
            <div class="flex flex-wrap gap-2">
              {["Docker", "Git", "Linux", "Nginx", "Vercel", "CI/CD"].map((tech) => (
                <span class="rounded-md bg-[var(--color-foreground)]/5 px-2.5 py-1 text-sm font-medium text-[var(--color-muted-foreground)] transition-colors group-hover:bg-[var(--color-primary)]/10 group-hover:text-[var(--color-primary)]">
                  {tech}
                </span>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>