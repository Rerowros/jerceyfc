---
// src/components/sections/Projects.astro
import { getCollection } from 'astro:content';
import ProjectCard from '../ui/ProjectCard.astro';

interface Props {
  limit?: number;
  showViewAll?: boolean;
  showFeaturedOnly?: boolean;
}

const { limit, showViewAll = false, showFeaturedOnly = false } = Astro.props;

// 1. Получаем проекты из коллекции
const allProjects = await getCollection('projects');

// 2. Сортируем и фильтруем
let displayProjects = allProjects.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

if (showFeaturedOnly) {
  displayProjects = displayProjects.filter((p) => p.data.featured);
}

if (limit) {
  displayProjects = displayProjects.slice(0, limit);
}
---

<section id="projects" class="px-4 py-12 md:py-20">
  <div class="mx-auto max-w-7xl">
    <!-- Заголовок секции -->
    <div class="mb-10 text-center md:mb-16">
      <p class="section-title scroll-animate">
        <span class="lang-ru">Портфолио</span>
        <span class="lang-en">Portfolio</span>
      </p>
      <h2
        class="font-cinzel text-glow scroll-animate text-3xl font-bold md:text-5xl"
        style="transition-delay: 100ms;"
      >
        <span class="lang-ru">Избранные работы</span>
        <span class="lang-en">Featured Work</span>
      </h2>
      <p
        class="scroll-animate mx-auto mt-3 max-w-2xl text-base text-[var(--color-muted-foreground)] md:mt-4 md:text-lg"
        style="transition-delay: 200ms;"
      >
        <span class="lang-ru"
          >Проекты, которыми я особенно горжусь — от веб-приложений до десктопных решений и
          ML-моделей.</span
        >
        <span class="lang-en"
          >Projects I'm particularly proud of — from web applications to desktop solutions and ML
          models.</span
        >
      </p>
    </div>

    <!-- Сетка проектов -->
    <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
      {
        displayProjects.map((p, index) => (
          <div class="scroll-animate h-full" style={`transition-delay: ${index * 100 + 300}ms`}>
            <ProjectCard project={p} />
          </div>
        ))
      }
    </div>

    <!-- Кнопка "Все проекты" -->
    {
      showViewAll && (
        <div class="scroll-animate mt-10 text-center md:mt-14" style="transition-delay: 600ms;">
          <a href="/projects" class="btn-primary group inline-flex items-center gap-2">
            <span class="lang-ru">Все проекты</span>
            <span class="lang-en">View All Projects</span>
            <svg
              class="h-5 w-5 transition-transform group-hover:translate-x-1"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"
              />
            </svg>
          </a>
        </div>
      )
    }
  </div>
</section>
