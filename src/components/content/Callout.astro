---
// src/components/content/Callout.astro
interface Props {
  type?: 'info' | 'warning' | 'danger' | 'success';
  title?: string;
}
const { type = 'info', title } = Astro.props;
// Используем классы Tailwind для поддержки темной (dark:) и светлой тем
const styles = {
  info: {
    container: 'border-blue-500/30 bg-blue-500/10 dark:bg-blue-500/10 bg-blue-50',
    title: 'text-blue-800 dark:text-blue-200',
    text: 'text-blue-700 dark:text-blue-300',
    icon: 'text-blue-600 dark:text-blue-400',
    iconSvg: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />`,
  },
  warning: {
    container: 'border-amber-500/30 bg-amber-500/10 dark:bg-amber-500/10 bg-amber-50',
    title: 'text-amber-800 dark:text-amber-200',
    text: 'text-amber-700 dark:text-amber-300',
    icon: 'text-amber-600 dark:text-amber-400',
    iconSvg: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />`,
  },
  danger: {
    container: 'border-red-500/30 bg-red-500/10 dark:bg-red-500/10 bg-red-50',
    title: 'text-red-800 dark:text-red-200',
    text: 'text-red-700 dark:text-red-300',
    icon: 'text-red-600 dark:text-red-400',
    iconSvg: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />`,
  },
  success: {
    container: 'border-emerald-500/30 bg-emerald-500/10 dark:bg-emerald-500/10 bg-emerald-50',
    title: 'text-emerald-800 dark:text-emerald-200',
    text: 'text-emerald-700 dark:text-emerald-300',
    icon: 'text-emerald-600 dark:text-emerald-400',
    iconSvg: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />`,
  },
};
const style = styles[type];
---

<div
  class={`my-6 rounded-xl border p-4 overflow-hidden relative callout-container ${style.container}`}
>
  <div class="flex gap-3">
    <div class={`flex-shrink-0 w-6 h-6 mt-0.5 ${style.icon}`}>
      <svg
        class="h-full w-full"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        set:html={style.iconSvg}
      />
    </div>
    <div class="flex-grow">
      {title && <h4 class={`mb-1 text-base font-bold ${style.title}`}>{title}</h4>}
      <div class={`text-sm leading-relaxed ${style.text} callout-content`}>
        <slot />
      </div>
    </div>
  </div>
</div>

<style is:global>
  /* Стили для ссылок внутри Callout */
  .callout-content a {
    text-decoration: underline;
    text-underline-offset: 3px;
    font-weight: 700;
    transition: opacity 0.2s ease;
  }

  .callout-content a:hover {
    opacity: 0.8;
  }

  /* Для типа info ссылки могут быть чуть синее, но лучше оставить их контрастными */
  .callout-container.bg-blue-500\/10 a {
    color: inherit;
    border-bottom: 1px solid currentColor;
    text-decoration: none;
  }
</style>
