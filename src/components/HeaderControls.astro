---
// src/components/HeaderControls.astro
// Элементы управления в хедере: палитра, язык, тема
---

<div class="flex flex-col md:flex-row items-center gap-4">
  <!-- Переключатель палитры -->
  <div id="palette-switcher" class="flex items-center gap-2">
    <button
      data-theme="indigo"
      class="h-5 w-5 rounded-full bg-[#818cf8] ring-offset-background ring-offset-2 focus:ring-2 ring-white/20 transition-all hover:scale-110"
      title="Indigo"></button>
    <button
      data-theme="lavender"
      class="h-5 w-5 rounded-full bg-[#c084fc] ring-offset-background ring-offset-2 focus:ring-2 ring-white/20 transition-all hover:scale-110"
      title="Lavender"></button>
    <button
      data-theme="mint"
      class="h-5 w-5 rounded-full bg-[#34d399] ring-offset-background ring-offset-2 focus:ring-2 ring-white/20 transition-all hover:scale-110"
      title="Mint"></button>
    <button
      data-theme="sunny"
      class="h-5 w-5 rounded-full bg-[#fbbf24] ring-offset-background ring-offset-2 focus:ring-2 ring-white/20 transition-all hover:scale-110"
      title="Sunny"></button>
    <button
      data-theme="rose"
      class="h-5 w-5 rounded-full bg-[#fb7185] ring-offset-background ring-offset-2 focus:ring-2 ring-white/20 transition-all hover:scale-110"
      title="Rose"></button>
  </div>

  <!-- Переключатель языка -->
  <button id="lang-toggle" class="icon-btn text-sm font-semibold w-10">
    <span class="lang-ru">EN</span>
    <span class="lang-en">RU</span>
  </button>

  <!-- Переключатель темы -->
  <button id="theme-toggle" class="icon-btn">
    <span id="theme-icon" class="theme-icon inline-block relative w-5 h-5">
      <svg
        class="absolute inset-0 w-full h-full"
        viewBox="0 0 32 32"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <g id="sun-group" class="transition-all duration-300">
          <circle cx="16" cy="16" r="6" fill="#fbbf24"></circle>
          <g>
            <line
              x1="16"
              y1="4"
              x2="16"
              y2="8"
              stroke="#fbbf24"
              stroke-width="2"></line>
            <line
              x1="16"
              y1="24"
              x2="16"
              y2="28"
              stroke="#fbbf24"
              stroke-width="2"></line>
            <line
              x1="4"
              y1="16"
              x2="8"
              y2="16"
              stroke="#fbbf24"
              stroke-width="2"></line>
            <line
              x1="24"
              y1="16"
              x2="28"
              y2="16"
              stroke="#fbbf24"
              stroke-width="2"></line>
            <line
              x1="7.76"
              y1="7.76"
              x2="10.34"
              y2="10.34"
              stroke="#fbbf24"
              stroke-width="2"></line>
            <line
              x1="21.66"
              y1="21.66"
              x2="24.24"
              y2="24.24"
              stroke="#fbbf24"
              stroke-width="2"></line>
            <line
              x1="7.76"
              y1="24.24"
              x2="10.34"
              y2="21.66"
              stroke="#fbbf24"
              stroke-width="2"></line>
            <line
              x1="21.66"
              y1="10.34"
              x2="24.24"
              y2="7.76"
              stroke="#fbbf24"
              stroke-width="2"></line>
          </g>
        </g>
        <g id="moon-group" class="transition-all duration-300">
          <path d="M16 8a8 8 0 1 0 8 8c-4.42 0-8-3.58-8-8z" fill="#818cf8"
          ></path>
        </g>
      </svg>
    </span>
  </button>
</div>
