---
// src/components/Footer.astro
import GitHubIcon from '../../components/icons/GitHubIcon.astro';
import TelegramIcon from '../../components/icons/TelegramIcon.astro';
---

<footer class="relative z-10 px-4 py-12">
  <div class="mx-auto max-w-7xl">
    <div class="glass-card rounded-2xl p-8 text-center">
      <!-- Социальные иконки -->
      <div class="mb-6 flex justify-center gap-4">
        <a
          href="https://github.com/Rerowros"
          target="_blank"
          rel="noopener noreferrer"
          class="icon-btn group"
          title="GitHub"
          aria-label="GitHub"
        >
          <GitHubIcon class="h-5 w-5 transition-colors group-hover:text-[var(--color-primary)]" />
        </a>
        <a
          href="https://t.me/Rerowros"
          target="_blank"
          rel="noopener noreferrer"
          class="icon-btn group"
          title="Telegram"
          aria-label="Telegram"
        >
          <TelegramIcon class="h-5 w-5 transition-colors group-hover:text-[var(--color-primary)]" />
        </a>
      </div>

      <!-- Копирайт -->
      <p class="text-sm text-[var(--color-muted-foreground)]">
        © {new Date().getFullYear()}
        <span class="text-gradient font-semibold">Rerowros</span>.
        <span class="lang-ru">Никакие права не защищены, можете забирать :)</span>
        <span class="lang-en">No rights reserved, take anything you want :)</span>
      </p>
    </div>
  </div>
</footer>
