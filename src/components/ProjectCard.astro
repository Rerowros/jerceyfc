---
const { project } = Astro.props;
---
<div class="bg-card p-6 rounded-2xl shadow-lg flex flex-col gap-4 transition-transform hover:scale-[1.03] border border-border h-full">
  <img src={project.imageUrl} alt={project.title.en} class="rounded-xl aspect-video object-cover h-40 md:h-48 w-full">
  <h3 class="text-2xl font-bold text-foreground">
    <span class="lang-ru">{project.title.ru}</span>
    <span class="lang-en">{project.title.en}</span>
  </h3>
  <p class="text-muted-foreground flex-grow">
    <span class="lang-ru">{project.description.ru}</span>
    <span class="lang-en">{project.description.en}</span>
  </p>
  <div class="flex flex-wrap gap-2">
    {project.tags.map(tag => (
      <span class="bg-primary/10 text-primary text-sm font-semibold px-2.5 py-0.5 rounded-full">{tag}</span>
    ))}
  </div>
  <div class="mt-auto pt-4 flex gap-4">
    {project.demoUrl && (
      <a href={project.demoUrl} class="font-semibold text-primary hover:opacity-80 transition-opacity">
        <span class="lang-ru">Демо →</span><span class="lang-en">Live Demo →</span>
      </a>
    )}
    {project.caseStudyUrl && (
      <a href={project.caseStudyUrl} class="font-semibold text-primary hover:opacity-80 transition-opacity">
        <span class="lang-ru">Подробнее →</span><span class="lang-en">Case Study →</span>
      </a>
    )}
    <a href={project.codeUrl} class="font-semibold text-primary hover:opacity-80 transition-opacity">
      <span class="lang-ru">Код →</span><span class="lang-en">View Code →</span>
    </a>
  </div>
</div>
