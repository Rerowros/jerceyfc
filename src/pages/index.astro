---
// src/pages/index.astro
// ИСПРАВЛЕНИЕ: Убран импорт global.css, так как он уже есть в Layout
import { slide } from "astro:transitions";

import Layout from "../layouts/Layout.astro";
import Header from "../components/layout/Header.astro";
import Hero from "../components/sections/Hero.astro";
import Skills from "../components/sections/Skills.astro";
import Projects from "../components/sections/Projects.astro";
import StickyContact from "../components/sections/StickyContact.astro";
import Footer from "../components/layout/Footer.astro";
---

<Layout
  title="Портфолио веб-разработчика"
  description="Портфолио Jersey — разработчик веб‑приложений, Telegram‑ботов и десктоп‑приложений. Просмотрите кейсы, демо и исходный код."
  pathname="/"
>
  <Header />
  <div>
    <div
      id="main-content-wrapper"
      class="flex flex-col"
      style="transition: filter 0.4s ease-out;"
    >
      <!-- Hero секция -->
      <Hero />

      <div class="optimize-rendering">
        <Skills />
        <Projects limit={3} showViewAll={true} showFeaturedOnly={true} />
      </div>
    </div>

    <!-- Sticky Contact -->
    <div
      class="sticky-parent-container"
      style="height: 200vh; position: relative;"
    >
      <StickyContact />
    </div>
  </div>
  <Footer />
</Layout>
