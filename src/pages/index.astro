---
// src/pages/index.astro
import "../styles/global.css";
import { slide } from "astro:transitions";

import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import About from "../components/About.astro";
import Skills from "../components/Skills.astro";
import Projects from "../components/Projects.astro";
import StickyContact from "../components/StickyContact.astro";
import Footer from "../components/Footer.astro";
---

<Layout
  title="Портфолио веб-разработчика"
  description="Портфолио Jersey — разработчик веб‑приложений, Telegram‑ботов и десктоп‑приложений. Просмотрите кейсы, демо и исходный код."
  pathname="/"
>
  <Header />
  <div transition:animate={slide({ duration: "0.3s" })}>
    <div
      id="main-content-wrapper"
      class="flex flex-col"
      style="transition: filter 0.4s ease-out;"
    >
      <!-- Hero секция -->
      <Hero />

      <!-- Skills секция -->
      <Skills />

      <!-- Projects секция -->
      <Projects limit={3} showViewAll={true} showFeaturedOnly={true} />
    </div>

    <!-- Sticky Contact -->
    <div
      class="sticky-parent-container"
      style="height: 200vh; position: relative;"
    >
      <StickyContact />
    </div>
  </div>
  <Footer />
</Layout>
