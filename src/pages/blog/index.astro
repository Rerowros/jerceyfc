---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/layout/Header.astro";
import Footer from "../../components/layout/Footer.astro";
import { fade } from "astro:transitions";

// Получаем все посты и сортируем
const posts = (await getCollection("blog"))
.filter((post) => !post.data.draft)
.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

---

<Layout
  title="Blog | Jersey"
  description="Engineering, Network Security, and Web Development articles."
  pathname="/blog"
>
  <Header />

  <main class="container pt-32 pb-20 min-h-screen px-4" transition:animate={fade({ duration: "0.2s" })}>
    <div class="max-w-4xl mx-auto">
      <div class="mb-16 text-center">
        <h1 class="text-4xl md:text-6xl font-extrabold font-cinzel mb-6 text-glow">
          <span
            class="text-transparent bg-clip-text bg-gradient-to-r from-white via-[var(--color-primary)] to-white animate-gradient bg-300%"
          >
            Engineering Log
          </span>
        </h1>
        <p class="text-xl text-[var(--color-muted-foreground)]">
          <span class="lang-ru">Заметки о сетях, архитектуре и разработке.</span>
          <span class="lang-en">Notes on networking, architecture, and development.</span>
        </p>
      </div>

      <div class="grid gap-8">
        {
          posts.map((post, index) => (
            <div
                class="scroll-animate group block p-6 md:p-8 rounded-2xl glass-card border border-[var(--color-border)] hover:border-[var(--color-primary)] transition-all hover:shadow-lg hover:shadow-[var(--color-primary)]/10 relative overflow-hidden"
                style={`transition-delay: ${index * 100}ms`}
            >
              <!-- Шумовая текстура (как на карточках проектов) -->
              <div
                class="absolute inset-0 z-0 opacity-[0.05] pointer-events-none mix-blend-soft-light"
                style='background-image: url("data:image/svg+xml,%3Csvg viewBox=\"0 0 200 200\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Cfilter id=\"noiseFilter\"%3E%3CfeTurbulence type=\"fractalNoise\" baseFrequency=\"0.8\" numOctaves=\"3\" stitchTiles=\"stitch\"/%3E%3C/filter%3E%3Crect width=\"100%25\" height=\"100%25\" filter=\"url(%23noiseFilter)\"/%3E%3C/svg%3E");'
              >
              </div>

              <div class="relative z-10 flex flex-col md:flex-row gap-4 md:items-center justify-between mb-4">
                <div class="flex gap-2 relative">
                  {post.data.tags.slice(0, 3).map((tag) => (
                    <a
                      href={`/blog/tag/${tag}`}
                      class="text-xs font-mono px-2.5 py-1 rounded bg-[var(--color-background)]/50 border border-[var(--color-border)] text-[var(--color-muted-foreground)] hover:border-[var(--color-primary)] hover:text-[var(--color-primary)] transition-colors z-20"
                    >
                      #{tag}
                    </a>
                  ))}
                </div>
                <time class="text-xs text-[var(--color-muted-foreground)] font-mono opacity-80">
                  {post.data.pubDate.toLocaleDateString("ru-RU", {
                    year: "numeric",
                    month: "long",
                    day: "numeric",
                  })}
                </time>
              </div>

              <a href={`/blog/${post.slug}`} class="block relative z-10 group-hover:translate-x-1 transition-transform duration-300">
                <h2 class="text-2xl font-bold font-cinzel mb-3 group-hover:text-[var(--color-primary)] transition-colors leading-tight">
                  <span class="lang-ru">{post.data.title.ru}</span>
                  <span class="lang-en">{post.data.title.en || post.data.title.ru}</span>
                </h2>

                <p class="text-[var(--color-muted-foreground)] line-clamp-3 leading-relaxed text-base">
                  <span class="lang-ru">{post.data.excerpt.ru}</span>
                  <span class="lang-en">{post.data.excerpt.en || post.data.excerpt.ru}</span>
                </p>

                <div class="mt-4 flex items-center text-sm font-medium text-[var(--color-primary)] opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-300">
                  <span class="lang-ru">Читать статью</span>
                  <span class="lang-en">Read article</span>
                  <svg
                    class="w-4 h-4 ml-2"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M17 8l4 4m0 0l-4 4m4-4H3"
                    />
                  </svg>
                </div>
              </a>
            </div>
          ))
        }
      </div>
    </div>

  </main>

  <Footer />
</Layout>

<style>
  .bg-300\% {
    background-size: 300% auto;
  }
  .animate-gradient {
    animation: gradient 8s ease infinite;
  }
  @keyframes gradient {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }
</style>
